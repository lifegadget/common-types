{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./dist/cjs",
    "removeComments": false,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "test/**/*.ts"],
  "exclude": ["node_modules", "**/*-spec.ts"]
}

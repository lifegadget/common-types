{
  "compilerOptions": {
    "declaration": false,
    "noEmit": true,
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"]
}

{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": false,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "strict": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "skipLibCheck": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "test"
  ]
}